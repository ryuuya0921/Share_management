<div class="container mt-5">
  <h2 class="mb-4 text-center">コメントを編集</h2>

  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: [@plaza_post, @comment], local: true, method: :patch) do |form| %>
    <div class="mb-3">
      <%= form.label :content, 'コメント内容', class: 'form-label text-center' %>
      <%= form.text_area :content, value: @comment.content, class: 'form-control' %>
    </div>
    <div class="d-flex justify-content-center gap-2">
      <%= form.submit '更新', class: 'btn btn-success' %>
      <%= link_to 'キャンセル', plaza_post_path(@plaza_post), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
