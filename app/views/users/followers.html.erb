<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @user.name %> のフォロワー一覧</h1>

  <ul class="list-group">
    <% @followers.each do |follower| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= link_to follower.name, bookshelf_path(follower), class: 'btn btn-link p-0 text-decoration-none' %>
        </div>
        <div>
          <% if current_user.following.include?(follower) %>
            <%= button_to 'フォロー解除', unfollow_user_path(follower), method: :delete, class: 'btn btn-danger btn-sm' %>
          <% else %>
            <%= button_to 'フォロー', follow_user_path(follower), method: :post, class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @followers, theme: 'bootstrap4' %>
  </div>

  <div class="text-center mt-4">
    <%= link_to '戻る', profile_path(current_user), class: 'btn btn-secondary' %>
  </div>
</div>
